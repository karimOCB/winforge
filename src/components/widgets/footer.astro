---
import { navigation } from "@/consts/navigation";
import IconArrowUpBlack from "../icons/icon-arrow-up-black.astro";
import IconArrowUp from "../icons/icon-arrow-up.astro";
import Logo from "./logo.astro";
import Socials from "./socials.astro";
---

<footer class="relative">
  <div
    class="container relative flex w-full flex-col items-center justify-between gap-y-6 overflow-hidden pb-10 pt-0 lg:flex-row lg:gap-y-12 lg:pt-16"
  >
    <Logo />

    <nav class="flex flex-wrap items-center justify-center lg:flex-nowrap">
      {
        navigation.map((nav) => (
          <a
            class={`${nav.borderStyle && "hidden"} group relative inline-block border-white px-6 py-6 text-white transition-transform after:absolute after:right-0 after:top-0 after:h-full after:w-[1px] after:rounded-full after:bg-white hover:-translate-y-1 lg:py-8 lg:text-xl ${nav.id === 4 && "after:hidden"} `}
            href={nav.href}
          >
            {nav.title}

            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 text-white opacity-0 transition-opacity group-hover:opacity-100">
              <IconArrowUp />
            </span>
          </a>
        ))
      }
    </nav>

    <Socials className="flex-col" />
  </div>

  <div class="absolute -bottom-8 left-1/2 -translate-x-1/2">
    <button
      id="buttonUp"
      class="flex h-14 w-24 items-center justify-center rounded-tl-xl rounded-tr-xl bg-white text-dark-2 transition-transform hover:scale-[1.04]"
    >
      <IconArrowUpBlack />
    </button>
  </div>
</footer>

<script>
  import { $ } from "@/lib/dom-selector";
  const buttonUp = $("#buttonUp");

  buttonUp.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>
