---
import IconArrowX from "@/components/icons/icon-arrow-x"
---

<section class="relative w-full">
  <swiper-container
    navigation="true"
    navigation-next-el=".custom-next-button"
    navigation-prev-el=".custom-prev-button"
    centered-slides="true"
    slide-active-class=".swiper-slide-active"
    breakpoints={{
      640: {
        slidesPerView: 1,
      },
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 5,
        spaceBetween: 10,
      },
    }}
    class="swiper-2 mx-auto w-56 rounded-2xl lg:mx-0 lg:w-full "
  >
    {
      [...Array(5)].map((item, index) => (
        <swiper-slide class="h-96 w-56 overflow-hidden rounded-2xl bg-white">
          <img
            src={`https://fakeimg.pl/224x384?text=${`Project${index + 1}`}&font=bebas`}
            class="h-full"
            alt="placeholder image"
          />
        </swiper-slide>
      ))
    }
  </swiper-container>
</section>

<style>
.swiper-slide-active {
  transform: scale(1.2);
  margin-top: 20px;
  z-index: 20;
}

</style>

<script>
  import { register } from "swiper/element/bundle";
  register();
  const swiperEl = document.querySelector("swiper-container");

  // swiper parameters
  const swiperParams = {
    spaceBetween: 10,
    on: {
      init() {
        // ...
      },
    },
  };

  // now we need to assign all parameters to Swiper element
  Object.assign(swiperEl!, swiperParams);

  // and now initialize it
  swiperEl!.initialize();
</script>
