---
import { HeadinPrincipal } from '../ui/heading-principal'
import WordRotate from "../ui/word_rotate";
import GraphicFigureLogo from "../widgets/graphic-figure-logo.astro";
---

<section id="hero" >
  <div class="container w-full flex flex-col items-start lg:justify-center pt-20 lg:pt-0 lg:-mt-10 h-auto pb-12 lg:pb-0 lg:min-h-[calc(100vh-10rem)] relative">

    <section class="">
